{% extends 'layouts/default.njk' %}

{% import 'partials/components.njk' as components %}
{% import 'partials/helpers.njk' as helpers %}

{% block body %}

    {{ components.title('Special Resolution of Shareholders') }}
    {{ components.company_info_subtitle(company.companyName, company.companyNumber) }}
    {{ components.date_subtitle(resolutionOptions.dateOfMinute | date) }}

    {{ components.blank_line() }}

    <text:p text:style-name="text_normal">
        {% if resolutionOptions.resolutionType == 'Special Resolution at Shareholder Meeting' %}
            This minute records that on {{ resolutionOptions.dateOfShareholderMeeting | date }} the shareholders of the Company held a meeting, during which the following {{ helpers.pluralise(resolutions, 'resolution was', 'resolutions were') }} passed:
        {% else %}
            The shareholders of the Company named below hereby resolve in accordance with section 122 of the Companies Act 1993:
        {% endif %}
    </text:p>

    <text:list text:style-name="normal_list">
        {% for resolution in resolutions %} 
            <text:list-item>
                <text:p text:style-name="text_normal">
                    {% if resolution.resolutionType == 'Adopt Constitution' %}
                        That a constitution in the form attached be adopted for the company with effect from {{ resolution.date | date }}. Companies Act 1993, ss 32(1) and 106(1)(a).
                    {% elif resolution.resolutionType == 'Alter Constitution' %}
                        That the constitution of the Company be altered in the manner set out in the attached document with effect from {{ resolution.date | date }}. Companies Act 1993, ss 32(2) and 106(1)(a).
                    {% elif resolution.resolutionType == 'Revoke Constitution' %}
                        That the constitution of the Company be revoked with effect from {{ resolution.date | date }}. Companies Act 1993, ss 32(2) and 106(1)(a).
                    {% elif resolution.resolutionType == 'Approve Major Transaction' %}
                        That the major transaction described in the attached document(s) be approved. Companies Act 1993, ss 106(1)(b) and 129(1)
                    {% elif resolution.resolutionType == 'Approve Amalgamation' %}
                        That the attached amalgamation proposal be approved. Companies Act 1993, ss 106(1)(d) and 241(2)(a).
                    {% elif resolution.resolutionType == 'Put Company into Liquidation' %}
                         That the company be put into liquidation by appointing {{ resolution.liquidators | join_and('name') }}. Companies Act 1993, ss 106(1)(c) and 221(5)].
                    {% elif resolution.resolutionType == 'Custom' %}
                        {{ resolution.text }}
                    {% endif %}
                </text:p>
            </text:list-item>
        {% endfor %}
    </text:list>

    {% if resolutionOptions.resolutionType == 'Special Resolution at Shareholder Meeting' %}
        <text:p text:style-name="text_normal">
            {{ helpers.pluralise(resolutions, 'The above resolution was', 'Each of the above resolutions were') }} approved as a special resolution of the Company’s shareholders by a majority of 75% or, if a higher majority is required by the constitution, that higher majority, of the votes of those shareholders entitled to vote and voting on the question. 
            
            {{ components.link('Companies Act 1993, ss 2(1) and 106', 'https://browser.catalex.nz/open_article/query?doc_type=instrument&title=Companies%20Act%201993&find=location&location=ss%202(1)%20+%20106') }}.
        </text:p>

        <text:p text:style-name="text_normal">
            {{ helpers.pluralise(resolutions, 'The resolution was', 'The resolutions were') }} approved by special resolution of each interest group of the Company (where applicable) to extent the {{ helpers.pluralise(resolutions, 'resolutions affect', 'resolution effects') }} the rights attached to the Company’s shares.
            
            {{ components.link('Companies Act 1993, s 117(1)', 'https://browser.catalex.nz/open_article/query?doc_type=instrument&title=Companies%20Act%201993&find=location&location=ss%20117(1)') }}.
        </text:p>
    {% else %}
        <text:p text:style-name="text_normal">
            The shareholders signing {{ helpers.pluralise(resolutions, 'this resolution', 'these resolutions') }} in lieu of a shareholder meeting:
        </text:p>

        <text:list text:style-name="normal_list">
            <text:list-item>
                <text:p text:style-name="text_normal">
                    not less than 75%, or such other percentage as the constitution may require for passing a special resolution, of the shareholders who would be entitled to vote on the resolution at a meeting of the Company’s shareholders;
                </text:p>
            </text:list-item>
            <text:list-item>
                <text:p text:style-name="text_normal">
                    together hold not less than 75% or, if a higher percentage is required by the constitution, that higher percentage, of the votes entitled to be cast on the resolution
                    {{ components.link('Companies Act 1993, s 122', 'https://browser.catalex.nz/open_article/query?doc_type=instrument&title=Companies%20Act%201993&find=location&location=s%20122') }}; and
                </text:p>
            </text:list-item>
            <text:list-item>
                <text:p text:style-name="text_normal">
                    confirm that, to the extent this resolution affects the rights attached to shares in terms of section 117(1) of the Companies Act 1993, it has been approved by special resolution of each interest group.
                </text:p>
            </text:list-item>
        </text:list>
    {% endif %}

    {{ components.notes(notes) }}

    {% if resolutionOptions.resolutionType == 'Special Resolution at Shareholder Meeting' %}
        <text:p text:style-name="text_normal">
            This minute is certified as true and correct by {{ resolutionOptions.chairperson.name }}, who chaired the shareholders’ meeting.
             
            {{ components.link('Companies Act 1993, s 124 and cl 8(2) of sch 1', 'https://browser.catalex.nz/open_article/query?doc_type=instrument&title=Companies%20Act%201993&find=location&location=+sch+1%20cl8(2)+124') }}.
        </text:p>

        <text:p text:style-name="text_normal">Signed by {{ resolutionOptions.chairperson.name }} as chairperson:</text:p>

        {{ components.signature_line() }}
    {% else %}
        {{ components.signature_table(resolutionOptions.shareholders, 'name') }}
    {% endif %}

{% endblock %}
